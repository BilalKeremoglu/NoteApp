@using NoteApp.WebApp.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/login-register.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Yönlendiriliyorsunuz..</h1>
                </div>
                <div class="main-content">
                    <div class="text-success">
                        <h2><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp;Kayıt Oldunuz...</h2><hr />
                        <p class="text-justify">
                            Lütfen e-posta adresinize gönderdiğimiz aktivasyon linkine tıklayarak hesabınızı aktive ediniz. Hesabınızı aktive etmeden not ekleyemezsiniz.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
    <script>
        $(function () {

            setTimeout(function () {
                window.location = "/Home/Index";
            }, 10000);
        });
    </script>